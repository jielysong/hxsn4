<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@color/green_none"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/icon_return"
            android:contentDescription="@null"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="20dip"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_middle"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="16.0sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="70dp"
            android:layout_height="48dp"

            android:background="@null"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/txt_count"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="账号"
            android:textColor="@color/gray_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/txt_count"
            android:gravity="center_vertical"
            android:text="shouji"
            android:textColor="@color/gray_dark"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray_light_n" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cur_psw"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="当前密码"
            android:textColor="@color/black_text_n"
            android:textSize="16sp" />

        <com.hxsn.zzd.ui.LineEditText
            android:id="@+id/edt_cur_psw"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_new_psw"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="新密码"
            android:textColor="@color/black_text_n"
            android:textSize="16sp" />

        <com.hxsn.zzd.ui.LineEditText
            android:id="@+id/edt_new_psw"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_verify_psw"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="确认密码"
            android:textColor="@color/black_text_n"
            android:textSize="16sp" />

        <com.hxsn.zzd.ui.LineEditText
            android:id="@+id/edt_verify_psw"
            style="?android:attr/textViewStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="16sp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="密码长度至少为6个字符，最多32个字符"
        android:textColor="@color/black_text_n"
        android:textSize="16sp" />


</LinearLayout>
