<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    tools:ignore="HardcodedText">


    <ImageView
        android:id="@+id/img_pest"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/bg_cucumber1_cudaob"/>

    <TextView
        android:id="@+id/txt_pest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_pest"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="黑星病"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/bg_text_gray"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/txt_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pest_name"
        android:layout_toRightOf="@+id/img_pest"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:text="春茬"
        android:gravity="center"
        android:textColor="@color/black_text_s"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_phenophase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pest_name"
        android:layout_toRightOf="@+id/txt_season"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:text="育苗期"
        android:gravity="center"
        android:textColor="@color/black_text_s"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_phenophase"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="25dp"
        android:text="易感染"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="18sp"/>

</RelativeLayout>

