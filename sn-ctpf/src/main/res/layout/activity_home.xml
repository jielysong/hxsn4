<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    tools:ignore="HardcodedText"
    tools:context="com.snsoft.ctpf.activity.HomeActivity">

    <TextView
        android:id="@+id/txt_city"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="广阳区"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/bubg"
        android:textColor="@color/white"/>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_city"
        android:layout_marginBottom="55dp">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_02"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/tab01"
            style="@style/main_tab_bottom"
            android:checked="true"
            android:drawableTop="@drawable/bottom6"
            android:text="@string/tab_text02" />

        <RadioButton
            android:id="@+id/tab02"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/bottom1"
            android:text="@string/tab_text01" />

        <RadioButton
            android:id="@+id/tab03"
            style="@style/main_tab_bottom"
            android:layout_marginTop="0.0dip"
            android:drawableTop="@drawable/bottom3"
            android:text="@string/tab_text03" />

        <RadioButton
            android:id="@+id/tab04"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/bottom4"
            android:text="@string/tab_text04" />

        <RadioButton
            android:id="@+id/tab05"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/bottom5"
            android:text="@string/tab_text05" />
    </RadioGroup>

</RelativeLayout>
